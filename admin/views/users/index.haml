.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:users, :index)
      %li=link_to pat(:new), url(:users, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:users)
    .inner
      %table.table
        %tr
          %th.first=mat(:user, :id)
          %th=mat(:user, :name)
          %th=mat(:user, :cell)
          %th=mat(:user, :points)
          %th.last="&nbsp;"
        -@users.each do |user|
          %tr
            %td.first=user.id
            %td=user.name
            %td=user.cell
            %td=user.points
            %td.last
              =button_to pat(:edit), url(:users, :edit, :id => user.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:users, :destroy, :id => user.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
              ="|"
              %a{:href => "/users/message/#{user.id}"} Message
      .actions-bar.wat-cf
        .actions="&nbsp;"