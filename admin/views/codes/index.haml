.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:codes, :index)
      %li=link_to pat(:new), url(:codes, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:codes)
    .inner
      %table.table
        %tr
          %th.first=mat(:code, :id)
          %th=mat(:code, :used)
          %th=mat(:code, :message)
          %th.last="&nbsp;"
        -@codes.each do |code|
          %tr
            %td.first=code.id
            %td=code.used
            %td=code.message
            %td.last
              =button_to pat(:edit), url(:codes, :edit, :id => code.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:codes, :destroy, :id => code.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")
