.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:activities, :index)
      %li.active=link_to pat(:new), url(:activities, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:activity)
